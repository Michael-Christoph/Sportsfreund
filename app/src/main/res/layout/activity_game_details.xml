<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetails">


    <TextView
        android:id="@+id/description_data"
        android:layout_below="@id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <TextView

        android:id="@+id/Type"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Uhrzeit"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_below="@id/Type"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Datum:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"/>

    <TextView

        android:id="@+id/time_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_toRightOf="@+id/Type"
        android:text="test"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/date_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_toRightOf="@+id/date"
        android:layout_below="@+id/time_data"
        android:text="test"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showOnMaps"
        android:text="Spielbeschreibung:"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/showOnMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/date_data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Ort auf Google Maps anzeigen"
        android:layout_marginTop="10dp"

        />



</RelativeLayout>